<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp" android:orientation="vertical" android:layout_margin="8dp"
              android:padding="8dp" android:background="@android:color/white">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/simple_data_item_title_text_view" android:layout_weight="2"
            android:textSize="20sp"
            android:gravity="left|center"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/simple_data_item_message_text_view" android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="left|center"/>
</LinearLayout>