<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity" android:orientation="vertical" android:background="#E0E0E0">

    <TextView
            android:text="아무 내용 없음"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/main_none_text_view" android:textSize="20sp"
            android:padding="16dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/simple_data_recycler_view"/>
</LinearLayout>